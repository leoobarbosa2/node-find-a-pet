generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ong {
  id String @id @default(uuid())

  name          String
  email         String   @unique
  password_hash String
  phone         String
  created_at    DateTime @default(now())
  address       String
  state         String
  city          String
  country       String
  zip_code      String   @unique
  Pets          Pet[]

  @@map("ongs")
}

enum PetSize {
  SMALL
  MEDIUM
  BIG
}

enum PetAge {
  PUPPY
  YOUNG
  ADULT
  SENIOR
}

enum LevelsOfEnergy {
  ONE
  TWO
  THREE
  FOUR
  FIVE
}

enum DependencyLevel {
  LOW
  MEDIUM
  HIGH
}

enum PetEnvironment {
  INDOOR
  OUTDOOR
  BOTH
}

model Pet {
  id String @id @default(uuid())

  name                  String
  about                 String
  age                   PetAge
  breed                 String
  size                  PetSize
  energy_level          LevelsOfEnergy
  dependency_level      DependencyLevel
  environment           PetEnvironment
  pictures              Bytes[]
  adoption_requirements String[]
  created_at            DateTime        @default(now())
  adopted_at            DateTime?

  ong    Ong    @relation(fields: [ong_id], references: [id])
  ong_id String

  @@map("pets")
}
